                img(data-src="/img/icons/remove-icon.svg" class='img-fluid remove search-icon position-absolute' alt='Capital On Tap')
            div(id=`item-1` class="collapse mx-4" aria-labelledby="headingOne" data-parent="#accordion")
              div(class="card-body px-0") 
